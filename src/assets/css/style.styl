$main-color = #ff8500;
$second-color =  #ffaa00;
$mini-color = #ff9100;
$color-alt = #99ca3c;
$color-alt-warning = #ff4e00;

*
    padding: 0;
    margin: 0;
    box-sizing: border-box;

html
    scroll-behavior: smooth;

body
    width: 100%;
    padding: 3rem;
    background: $second-color;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    @media screen and (max-width: 570px)
        padding: 1.5rem;

h1,h2,h3,h4
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    color: $main-color;
    font-weight: bold;

// input
input
    padding: 1rem .5rem ;
    margin-bottom: 1.5rem;

    &:focus
        outline: none;
        border: 3px solid #0096c7;



textarea
    padding: .5rem .5rem ;
    margin-bottom: 1.5rem;
    
    &:focus
        outline: none !important;
        border: 3px solid #0096c7;


// Button
.btn
    padding: 1rem .5rem;
    background: $main-color;
    border: none;
    color: white;
    font-size: 1rem;
    
    :hover
        background: $color-alt-warning;

.btn:disabled,
.btn[disabled]
    background: whitesmoke;
    cursor: not-allowed;

.btn-wide
    width: 100%;




// layout
.container
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    width: 100%;

    @media screen and (max-width: 570px)
        padding-left: 1rem;
        padding-right: 1rem;

.grid
    display: grid;
    gap: 1.5rem;

.flex
    display: flex

.flex-column
    flex-direction: column


// margin
.mb-0-5
    margin-bottom: .5rem;

.mb-1
    margin-bottom: 1rem

.mb-1-5
    margin-bottom: 1.5rem

.mb-2
    margin-bottom: 2rem


.mt-0-5
    margin-top: .5rem;

.mt-1
    margin-top: 1rem;

.mt-1-5
    margin-top: 1.5rem;

.mt-2
    margin-top: 2rem;

.title-display-1
    font-size: 2rem;
    font-weight: 600;
    color: $main-color;

    @media screen and (max-width: 570px)
        font-size: 1.75rem;